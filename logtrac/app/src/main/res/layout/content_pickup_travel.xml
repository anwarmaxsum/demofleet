<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.logtrac.maxsum.logtrac.PickupTravelActivity"
    tools:showIn="@layout/activity_pickup_travel">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:paddingLeft="2dp"
            android:background="@color/colorLightGrey"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="510dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@color/colorWhite">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:padding="2dp">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/name_travel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Way Bill"
                    android:textSize="16sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/waybill_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Departure"
                    android:textSize="16sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/departure_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Arrival"
                    android:textSize="16sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/arrival_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Date"
                    android:textSize="16sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/date_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Customer"
                    android:textSize="16sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/customer_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Fuel"
                        android:textSize="16sp" />

                <EditText
                    android:id="@+id/fuel"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:hint="(number)"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            >

            <Button
                android:id="@+id/accept_button"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:background="@drawable/yes"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <Button
                android:id="@+id/reject_button"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:layout_marginTop="30dp"
                android:paddingTop="30dp"
                android:background="@drawable/no"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
