<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.logtrac.maxsum.logtrac.FinishTravelActivity"
    tools:showIn="@layout/activity_finish_travel">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:paddingLeft="2dp"
        android:background="@color/colorWhite"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="510dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:padding="2dp">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/name_travel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Way Bill"
                    android:textSize="13sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/waybill_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Departure"
                    android:textSize="13sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/departure_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Arrival"
                    android:textSize="13sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/arrival_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Date"
                    android:textSize="13sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/date_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Customer"
                    android:textSize="13sp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/customer_travel"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:paddingLeft="15dp"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Entry Fuel Consumption"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/fuel"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:hint="(number)"
            android:inputType="numberDecimal"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"/>

        <Button
            android:id="@+id/button_finish_travel"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            android:text="Finish Travel"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>




